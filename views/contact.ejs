<%- include("partials/header"); -%>
<body>
    <div class="container center">


    <div class="Box">
        
        <h1 class="color text-center">Contact Us</h1>
        
        <form action="https://formsubmit.co/50f9831aaef2cbb54a44d647174f1a14" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="" placeholder="Your Name" required>
            </div>
            <input type="hidden" name="_next" value="http://localhost:3000/thankyou">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input class="form-control" type="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="" placeholder="Message" cols="30" rows="10" required></textarea>
            </div>
            
            <div class="center">
                <button class="btn bg-filled btn-lg mt-2" type="submit">Send Message</button>
            </div>
        </form>
    </div>


</div>
<%- include("partials/footer"); -%>
